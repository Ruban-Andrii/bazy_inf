use infs_rubana;
create table izba2 (
	adres_budynku varchar(50),
	nazwa_izby varchar(30),
	metraz smallint unsigned, 
	wlasciciel int,
	primary key (adres_budynku, nazwa_izby),
	foreign key (wlasciciel) references postac (id_postaci) on delete set null
);

desc postac;

show create table izba;

alter table izba2 add kolor varchar(30) 
after metraz;

create table przetwora (
	id_przetworu int,
    rok_produkcji date, 
    id_wykonawcy int,
    zawartosc varchar(50),
    dodatek varchar(50),
    id_konsumenta int,
    foreign key (id_konsumenta, id_wykonawcy) references postac (id_postaci)
);
